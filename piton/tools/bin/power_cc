POWER_GCC=${POWER_TARGET_TRIPLE}-gcc
POWER_GCC_OPTS="-Os -g -Wall -std=c99 -msoft-float -mno-string -mno-multiple -mno-vsx -mno-altivec -mlittle-endian -fno-stack-protector -mstrict-align -ffreestanding -fdata-sections -ffunction-sections $2"
POWER_LD=${POWER_TARGET_TRIPLE}-ld
POWER_LINK_OPTS="-T ${DV_ROOT}/verif/diag/power/c/include/powerpc.lds"
INCS="-I${DV_ROOT}/verif/diag/power/c/include"

#${POWER_GCC} ${INCS} ${POWER_GCC_OPTS} -c -o diag.o $1 ${DV_ROOT}/verif/diag/power/c/lib/console.c ${DV_ROOT}/verif/diag/power/c/include/head.S ${POWER_LINK_OPTS}
${POWER_GCC} ${INCS} ${POWER_GCC_OPTS} -c -o console.o ${DV_ROOT}/verif/diag/power/c/lib/console.c
${POWER_GCC} ${INCS} ${POWER_GCC_OPTS} -c -o head.o ${DV_ROOT}/verif/diag/power/c/include/head.S
${POWER_GCC} ${INCS} ${POWER_GCC_OPTS} -c -o diag.o $1
${POWER_LD} console.o head.o diag.o ${POWER_LINK_OPTS} -o diag.exe
